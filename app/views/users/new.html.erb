<% provide(:title, "Signup") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'shared/error_messages' %>
  </div>
</div>

<div class="common-container">
  <div class="common-content">
  
    <h1>新規登録</h1>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_with(model: @user, local: true) do |f| %>

           
            
            <%= f.label :name, class: "label-signup" %>
            <%= f.text_field :name, class: "form-control"  %>

            <div style="margin-bottom: 10px"></div>

            <%= f.label :email, class: "label-signup" %>
            <%= f.email_field :email, class: "form-control" %>

            <div style="margin-bottom: 10px"></div>

            <!--
            <%= f.label :position, class: "label-signup" %>
            <%= f.select :name,['','メンバー','チームリーダー','グループリーダー'],{}, class: "form-control-select" %>

            <div style="margin-bottom: 10px"></div>

            <%= f.label :belongs, class: "label-signup" %>
            <%= f.select :name,['','試作部'],{}, class: "form-control-select" %>

            <div style="margin-bottom: 10px"></div>

            <%= f.label :specialty, class: "label-signup" %>
            <%= f.select :name,['','組立','加工','電気'],{}, class: "form-control-select" %>

            -->

            <div style="margin-bottom: 10px"></div>

            <%= f.label :password, class: "label-signup" %>
            <%= f.password_field :password, class: "form-control" %>

            <div style="margin-bottom: 10px"></div>

            <%= f.label :password_confirmation, "Confirmation", class: "label-signup" %>
            <%= f.password_field :password, class: "form-control" %>

            <div style="margin-top: 10px"></div>

            <%= f.submit "新規作成", class: "btn btn-primary btn-block btn-signup" %>      

        <% end %>
      </div>
    </div>
  </div>
</div>