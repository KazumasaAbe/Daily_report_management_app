<% provide(:title, "edit") %>
<% provide(:class_text, "edit") %>
<% provide(:button_text, "更新") %>

<div class="modal-dialog modal-dialog-center">
  <div class="modal-content">
    <div class="modal-body">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>

      <h2><%= @attendance.worked_on %>(<%= $days_of_the_week[@attendance.worked_on.wday] %>)</h2>

      <div class="row">
        <div class="col-md-12">

          <table class="table table-bordered table-condensed table-hover" id="table-users">
            <thead>
            <tbody>
              <tr>
                <th>受付No</th>

                <% if @daily_receipts.present? %>
                <% @daily_receipts.each do |d| %>

                <td><%= d.d_receipt_namuber %></td>
                <% end %>

                <% else %>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <% end %>

              </tr>
              <tr>
                <th>業務名</th>

                <% if @daily_receipts.present? %>
                <% @daily_receipts.each do |d| %>

                <td><%= d.d_receipt_name %></td>
                <% end %>
                <% else %>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <% end %>
              </tr>

              <tr>
                <th>業務種類</th>

                <% if @daily_receipts.present? %>
                <% @daily_receipts.each do |d| %>

                <td><%= d.d_receipt_specialty %></td>

                <% end %>
                <% else %>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <% end %>
              <tr>

              <tr>
                <th>業務時間</th>

                <% if @daily_receipts.present? %>
                <% @daily_receipts.each do |d| %>
                <td><%= d.d_receipt_time %> 分</td>
                <% end %>

                <% else %>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <% end %>
              </tr>

              </thead>
            </tbody>
          </table>

          <div class="row">
            <div class="col-md-6">
              <h2>その他</h2>



              <table class="table table-bordered table-condensed table-hover" id="table-users">
                <thead>
                <tbody>
                  <tr>
                    <th>4S</th>
                    <td><%= @attendance.clean_time %> 分</td>
                  </tr>

                  <tr>
                    <th>朝礼/昼礼</th>
                    <td><%= @attendance.meeting_time %> 分</td>
                  </tr>

                  <tr>
                    <th>その他</th>
                    <td><%= @attendance.other_time %> 分</td>
                  </tr>

                  <tr>
                    <th>残業時間</th>
                    <td><%= @attendance.over_time %> 時間</td>
                  </tr>

                  <tr>
                    <th>出勤区分</th>
                    <td><%= @attendance.classification %></td>
                  </tr>

                  <tr>
                    <th>勤務時間</th>
                    <td><%= @attendance.working_time %> 分</td>
                  </tr>

                </tbody>
                </thead>
              </table>


            </div>
          </div>
          <% if current_user.admin? %>
          <div class="center">
            <td><%= link_to "日報編集", admin_reception_request_user_attendance_path(@user, @attendance, date: @attendance.worked_on), class: "btn btn-info" %></td>
          </div>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>